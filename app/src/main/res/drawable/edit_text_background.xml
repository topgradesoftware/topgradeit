<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Background color - light blue tint to indicate editable -->
    <solid android:color="#F0F8FF" />
    
    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="@color/navy_blue" />
    
    <!-- Rounded corners -->
    <corners android:radius="4dp" />
    
    <!-- Padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
        
</shape>
