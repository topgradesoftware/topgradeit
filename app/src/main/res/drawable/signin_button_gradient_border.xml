<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Black border layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Yellow gradient background layer (with padding to show border) -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:endColor="@color/student_button_gradient_end"
                android:startColor="@color/student_button_gradient_start"
                android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    
</layer-list> 
