<resources>

    <!-- Base application theme with full blue -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/navy_blue</item>
        <item name="colorAccent">@color/navy_blue</item>
        <item name="colorPrimaryContainer">@color/navy_blue</item>
        <item name="colorSecondary">@color/navy_blue</item>
        <item name="colorSecondaryContainer">@color/navy_blue</item>
        <item name="colorTertiary">@color/navy_blue</item>
        <item name="colorTertiaryContainer">@color/navy_blue</item>

        <!-- Status & Navigation bar -->
        <item name="android:statusBarColor">@color/navy_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/navy_blue</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:forceDarkAllowed">false</item>
        
        <!-- Additional status bar configuration for white icons -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">false</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>

        <!-- Card colors -->
        <item name="colorSurfaceVariant">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/black</item>

        <!-- Button styling -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/quicksand_medium</item>

        <!-- Action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="colorAccent">@color/color_black</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoFlicker" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoFlicker">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">355dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">164dp</item>
        <item name="android:background">@color/navy_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Popup Animation Style -->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <!-- Student Login Modern Styles -->
    <style name="StudentLoginInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/student_primary</item>
        <item name="hintTextColor">@color/student_primary</item>
        <item name="android:textColorHint">@color/student_text_secondary</item>
        <item name="android:textColor">@color/student_text_primary</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="StudentLoginButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/navy_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="StudentLoginCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/student_card_background</item>
    </style>

    <style name="StudentLoginHeaderStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/student_primary</item>
    </style>

    <!-- Staff Login Styles -->
    <style name="StaffLoginStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="StaffLoginCardStyle">
        <item name="cardBackgroundColor">@color/navy_blue</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="StaffLoginFooterStyle">
        <item name="cardBackgroundColor">@color/navy_blue</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="StaffLoginTextStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StaffLoginButtonStyle">
        <item name="android:background">@drawable/signin_button_white_border_teacher</item>
    </style>

    <!-- Parent Login Styles -->
    <style name="ParentLoginStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ParentLoginCardStyle">
        <item name="cardBackgroundColor">@color/dark_brown</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="ParentLoginFooterStyle">
        <item name="cardBackgroundColor">@color/dark_brown</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="ParentLoginTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ParentLoginButtonStyle">
        <item name="android:background">@drawable/signin_button_white_border</item>
    </style>

    <style name="ParentLoginFooterTextStyle">
        <item name="android:textColor">#FDD007</item>
    </style>

    <!-- Custom Button Style for Navy Blue -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/navy_blue</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>

    <!-- Material Theme Overlay for Buttons -->
    <style name="ThemeOverlay.App.Button" parent="ThemeOverlay.Material3.Button">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryContainer">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSecondary">@color/navy_blue</item>
        <item name="colorSecondaryContainer">@color/navy_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorTertiary">@color/navy_blue</item>
        <item name="colorTertiaryContainer">@color/navy_blue</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorOnTertiaryContainer">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceVariant">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorError">@color/error_500</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <!-- Tab Text Appearance Style -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <!-- Consistent Text Appearance Styles -->
    <style name="TextAppearance.QuicksandBold.Small" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.QuicksandBold.Medium" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.QuicksandBold.Large" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.QuicksandBold.Header" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Reusable CardView styles for consistent styling -->
    <style name="CardStyle.Default" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="CardStyle.Header" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/colorAccent</item>
    </style>

    <style name="CardStyle.Role" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">30dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="CardStyle.RoleLogin" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">30dp</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="CardStyle.Option" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <!-- Form Styles for Complaint Submission -->
    <style name="TextLabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SpinnerStyle" parent="EditTextStyle" />

    <!-- Compact Filter Styles -->
    <style name="CompactTextLabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="CompactSpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
