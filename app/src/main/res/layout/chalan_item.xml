<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:divider="@drawable/style_divider_gray"
        android:gravity="center_vertical"
        android:scrollbars="horizontal"
        android:showDividers="middle">

        <TextView
            android:id="@+id/Chalan_No"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="123"
            android:padding="7dp"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/quicksand_bold"
            app:drawableRightCompat="@drawable/ic_arrow_drop_down_black_24dp" />


        <TextView
            android:id="@+id/Month"

            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="April"
            android:padding="7dp"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/fee_detail"

            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:hint="fee_detail"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_8ssp" />

        <TextView
            android:id="@+id/Fee"

            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="100"
            android:padding="7dp"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/Arrears"

            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="0"
            android:padding="7dp"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/fine"

            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_8ssp" />

        <TextView
            android:id="@+id/Discount"

            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="200"
            android:padding="7dp"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/Payable"

            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="100"
            android:padding="7dp"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/Payment"

            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="100"
            android:padding="7dp"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/Remaining"

            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="100"
            android:padding="7dp"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_10ssp" />


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/show_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


</LinearLayout>
