<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:divider="@drawable/style_divider_gray"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:showDividers="middle"
        android:weightSum="11.3">

        <CheckBox
            android:id="@+id/sms_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:minWidth="32dp"
            android:minHeight="32dp"
            android:checked="true"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/color_black"
            android:textSize="15sp"
            android:contentDescription="@string/sms_toggle" />

        <TextView
            android:id="@+id/roll_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:gravity="center_horizontal"
            android:padding="7dp"
            android:text="101"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_10ssp"

            />

        <TextView
            android:id="@+id/student_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.3"
            android:padding="7dp"
            android:text="Umer Sheraz"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/quicksand_bold" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5">

            <TextView
                android:id="@+id/attendence_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:textColor="@color/color_black"
                android:textSize="12sp"
                app:drawableRightCompat="@drawable/ic_arrow_drop_down_black_24dp" />

        </RelativeLayout>


        <EditText
            android:id="@+id/attendence_note"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.0"
            android:gravity="start"
            android:hint="@string/reason"

            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:padding="7dp"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_dark" />


</LinearLayout>
