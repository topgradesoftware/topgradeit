<?xml version="1.0" encoding="utf-8"?>
<!-- Complete Unified Date Sheet Layout -->
<!-- Single file containing both table structure and item layout -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <!-- ===== TABLE HEADER ===== -->
    <LinearLayout
        android:id="@+id/header_rv_date_sheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/parent_primary"
        android:divider="@drawable/style_divider_white"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:weightSum="7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Serial Number Header -->
        <TextView
            android:id="@+id/header_serial_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/serial_number"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sm"
            android:fontFamily="@font/quicksand_bold"
            android:maxLines="1" />

        <!-- Date Header -->
        <TextView
            android:id="@+id/header_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/date"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sm"
            android:fontFamily="@font/quicksand_bold"
            android:maxLines="1" />

        <!-- Subject Header -->
        <TextView
            android:id="@+id/header_subject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/subject"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sm"
            android:fontFamily="@font/quicksand_bold"
            android:maxLines="1" />

        <!-- Time Header -->
        <TextView
            android:id="@+id/header_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/time"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sm"
            android:fontFamily="@font/quicksand_bold"
            android:maxLines="1" />

        <!-- Syllabus Header -->
        <TextView
            android:id="@+id/header_syllabus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="@string/syllabus"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sm"
            android:fontFamily="@font/quicksand_bold"
            android:maxLines="1" />
    </LinearLayout>

    <!-- ===== RECYCLERVIEW FOR DATA ROWS ===== -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/date_sheet_rcv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:nestedScrollingEnabled="true"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/header_rv_date_sheet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/date_sheet_item_row" />

</androidx.constraintlayout.widget.ConstraintLayout>
