<?xml version="1.0" encoding="utf-8"?>
<!-- Complete Unified Date Sheet Layout -->
<!-- Single file containing both table structure and item layout -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <!-- ===== TABLE HEADER ===== -->
    <LinearLayout
        android:id="@+id/header_rv_date_sheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:divider="@drawable/style_divider_white"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:weightSum="6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Serial Number Header -->
        <TextView
            android:id="@+id/header_serial_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/serial_number"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sm"
            android:fontFamily="@font/quicksand_bold"
            android:maxLines="1" />

        <!-- Date Header -->
        <TextView
            android:id="@+id/header_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/date"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sm"
            android:fontFamily="@font/quicksand_bold"
            android:maxLines="1" />

        <!-- Subject Header -->
        <TextView
            android:id="@+id/header_subject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/subject"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sm"
            android:fontFamily="@font/quicksand_bold"
            android:maxLines="1" />

        <!-- Time/Syllabus Header -->
        <TextView
            android:id="@+id/header_time_syllabus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.0"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/time"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sm"
            android:fontFamily="@font/quicksand_bold"
            android:maxLines="1" />
    </LinearLayout>

    <!-- ===== RECYCLERVIEW FOR DATA ROWS ===== -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/date_sheet_rcv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/header_rv_date_sheet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/date_sheet_item_row" />

    <!-- ===== TOTAL RECORDS COUNTER ===== -->
    <TextView
        android:id="@+id/total_records_date_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:text="@string/total_records_default"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/text_sm"
        android:fontFamily="@font/quicksand_bold"
        android:contentDescription="@string/total_records_desc"
        app:layout_constraintTop_toBottomOf="@id/date_sheet_rcv"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
