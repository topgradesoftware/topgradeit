<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingVertical="8dp"
    android:paddingHorizontal="12dp">

    <LinearLayout
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="100">

        <!-- Date Column -->
        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:padding="8dp"
            android:text="10 June, 2019"
            android:textColor="@color/color_black"
            android:textSize="12sp"
            android:fontFamily="@font/quicksand_medium"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="start|center_vertical" />

        <!-- Attendance Status Column -->
        <TextView
            android:id="@+id/attendence_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:padding="8dp"
            android:text="Present"
            android:textColor="@color/color_black"
            android:textSize="12sp"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:background="@drawable/attendance_status_background"
            android:layout_marginHorizontal="4dp"
            android:minHeight="32dp" />

        <!-- Note Column -->
        <TextView
            android:id="@+id/note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:padding="8dp"
            android:text="Due to fever"
            android:textColor="@color/color_black"
            android:textSize="11sp"
            android:fontFamily="@font/quicksand_medium"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="end|center_vertical" />

    </LinearLayout>

    <!-- Bottom Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_gray_dark"
        android:alpha="0.3" />

</LinearLayout>
