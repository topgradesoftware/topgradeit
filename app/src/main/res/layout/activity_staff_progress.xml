<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Background wave -->
    <ImageView
        android:id="@+id/header_wave"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave"
        android:contentDescription="@string/header_wave_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ic_arrow_back -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_arrow_back"
        android:background="@drawable/circle_background"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="parent" 
        android:contentDescription="@string/back_button"/>

    <!-- Header Title -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress Report"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/quicksand_bold"
        android:lineSpacingExtra="2dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="@+id/header_wave"
        app:layout_constraintEnd_toEndOf="@+id/header_wave" />

    <!-- Advanced Filter Button -->
    <TextView
        android:id="@+id/show_advanced_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16sdp"
        android:drawableEnd="@drawable/ic_arrow_drop_down_white_24dp"
        android:drawablePadding="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:text="Select Exam Session"
        android:textColor="@color/white"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/subject_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/subject_Session"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_border_gray"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"
                        android:text="Subjects"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />


                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/subject_rcv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/subject_Session"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/subject_progress_item3" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <LinearLayout
                    android:id="@+id/heading_Session"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_border_gray"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"
                        android:text="Subjects"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"
                        android:text="No. of Test"

                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"

                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"

                        android:text="Students Appeared"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="50"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"

                        android:text="Total Students"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="50"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"
                        android:text="Above 90%"

                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="50"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"

                        android:text="81% - 90%"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="50"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"
                        android:text="71% - 80%"

                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="50"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"

                        android:text="61% - 70%"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="50"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"

                        android:text="51% - 60%"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="50"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"
                        android:text="33% - 50%"

                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="50"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"
                        android:text="25% - 33%"

                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="50"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"
                        android:text="Passed"

                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="50"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"

                        android:text="Failed"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="50"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"
                        android:text="Passed % "

                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="50"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"
                        android:text="Failed %"

                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"
 />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark" />


                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="50"
                        android:padding="@dimen/_7sdp"
                        android:singleLine="true"
                        android:text="Class Position"
                        android:textColor="@color/color_black"

                        android:textSize="@dimen/_10ssp"
                                     android:fontFamily="@font/quicksand_bold"

                        android:visibility="gone" />


                    <View
                        android:layout_width="match_parent"

                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark"
                        android:visibility="gone" />


                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/result_rcv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/heading_Session"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/subject_progress_item2" />


            </RelativeLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>



