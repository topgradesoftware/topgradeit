<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="0dp"
    android:fitsSystemWindows="false">

    <!-- Background wave - Extended to cover status bar -->
    <ImageView
        android:id="@+id/header_wave"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave_navy_blue"
        android:contentDescription="@string/header_wave_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ic_arrow_back -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="parent" 
        android:contentDescription="@string/back_button"/>

    <!-- Header Title -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:lineSpacingExtra="2dp"
        android:text="Salary"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="@+id/header_wave"
        app:layout_constraintEnd_toEndOf="@+id/header_wave" />

    <!-- Header Row - Navy Blue -->
    <LinearLayout
        android:id="@+id/header_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@color/navy_blue"
        android:divider="@drawable/style_divider_white"
        android:minHeight="30dp"
        android:orientation="horizontal"
        android:padding="@dimen/_4sdp"
        android:showDividers="middle"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center_vertical"
            android:padding="@dimen/_8sdp"
            android:text="Month"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center_vertical"
            android:padding="@dimen/_8sdp"
            android:text="Payable"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center_vertical"
            android:padding="@dimen/_8sdp"
            android:text="Paid"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center_vertical"
            android:padding="@dimen/_8sdp"
            android:text="Remain"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- RecyclerView for salary items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/salary_rcv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/header_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/salery_item_" 
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"/>

    <!-- Bottom Total Row - Navy Blue -->
    <LinearLayout
        android:id="@+id/total_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="0dp"
        android:background="@color/navy_blue"
        android:divider="@drawable/style_divider_white"
        android:minHeight="30dp"
        android:orientation="horizontal"
        android:padding="@dimen/_4sdp"
        android:showDividers="middle"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/salary_rcv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/Salary_Month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center_vertical"
            android:padding="@dimen/_8sdp"
            android:text="Total"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Payable_total"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center_vertical"
            android:padding="@dimen/_8sdp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Paid_total"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center_vertical"
            android:padding="@dimen/_8sdp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Remain_total"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center_vertical"
            android:padding="@dimen/_8sdp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/total_row"
        app:layout_constraintBottom_toTopOf="@+id/footer_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/total_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Total Records:"
            android:textColor="?android:textColorPrimary"
            android:textSize="10sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/payment_history"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/quicksand_bold"
            android:onClick="View_Payment_History"
            android:text="Payment History"
            app:backgroundTint="@color/colorAccent"
            app:icon="@drawable/round_history_24"
            app:iconGravity="start"
            app:iconPadding="@dimen/_8sdp"
            app:iconSize="24dp"
            app:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/invoice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/quicksand_bold"
            android:onClick="View_Invoice"
            android:text="@string/invoice"
            app:backgroundTint="@color/colorAccent"
            app:icon="@drawable/round_receipt_24"
            app:iconGravity="start"
            app:iconPadding="@dimen/_8sdp"
            app:iconSize="24dp"
            app:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/advacne_salary"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/quicksand_bold"
            android:onClick="View_Advance_Salary"
            android:text="@string/advanced_salary"
            app:backgroundTint="@color/colorAccent"
            app:icon="@drawable/round_payments_24"
            app:iconGravity="start"
            app:iconPadding="@dimen/_8sdp"
            app:iconSize="24dp"
            app:iconTint="@color/white" />
    </LinearLayout>

    <!-- Footer Container -->
    <LinearLayout
        android:id="@+id/footer_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fitsSystemWindows="false">

        <!-- Footer Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/navy_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/topgrade_logo"
                    android:contentDescription="@string/topgrade_logo"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="@string/powered_by_topgrade_software"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
