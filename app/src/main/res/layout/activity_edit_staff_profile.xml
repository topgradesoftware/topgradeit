<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="0dp"
    android:fitsSystemWindows="false">

    <!-- Background wave - Extended to cover status bar -->
    <ImageView
        android:id="@+id/header_wave"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave_navy_blue"
        android:contentDescription="@string/header_wave_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ic_arrow_back -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="parent" 
                android:contentDescription="@string/back_button" />

         <!-- Header Title -->
     <TextView
         android:id="@+id/header_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/update_profile"
         android:textColor="@color/white"
         android:textSize="24sp"
         android:fontFamily="@font/quicksand_bold"
         android:lineSpacingExtra="2dp"
         android:textAlignment="center"
         app:layout_constraintTop_toTopOf="@+id/header_wave"
         app:layout_constraintBottom_toBottomOf="@+id/header_wave"
         app:layout_constraintStart_toStartOf="@+id/header_wave"
         app:layout_constraintEnd_toEndOf="@+id/header_wave" />

    <!-- Profile Image Section -->
    <RelativeLayout
        android:id="@+id/image_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:id="@+id/image_action"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_centerInParent="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="0dp"
                android:src="@drawable/man" />

            <!-- Edit Icon Overlay -->
            <ImageView
                android:id="@+id/edit_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_edit_black_24dp"
                android:background="@drawable/circle_background_white"
                android:padding="6dp"
                android:elevation="4dp"
                android:contentDescription="@string/edit_image_icon_staff"
                app:tint="@color/navy_blue" />

        </RelativeLayout>

    </RelativeLayout>

         <!-- Profile Details Card -->

    <!-- Save Changes Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/profile_details_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@+id/image_section"
        app:layout_constraintBottom_toTopOf="@+id/btn_save_changes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

            <!-- Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/name_label_staff"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/name_edit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="7"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@color/black"
                    android:textColorHint="#000064"
                    android:textSize="12sp"
                    android:inputType="textPersonName"
                    android:autofillHints="name"
                    android:hint="@string/name_hint_staff"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/email_label_staff"
                    android:textColor="@color/navy_blue"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/email_edit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="7"
                    android:background="@drawable/edit_text_background"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="#000064"
                    android:textSize="12sp"
                    android:autofillHints="emailAddress"
                    android:hint="@string/email_hint_staff"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Phone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/phone_label_staff"
                    android:textColor="@color/navy_blue"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/phone_edit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="7"
                    android:background="@drawable/edit_text_background"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:textColorHint="#000064"
                    android:textSize="12sp"
                    android:autofillHints="phone"
                    android:hint="@string/phone_hint_staff"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Landline -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/landline_label_staff"
                    android:textColor="@color/navy_blue"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/landline_edit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="7"
                    android:background="@drawable/edit_text_background"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="#000064"
                    android:textSize="12sp"
                    android:autofillHints="phone"
                    android:hint="@string/landline_hint_staff" />

            </LinearLayout>

            <!-- Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/address_label_staff"
                    android:textColor="@color/navy_blue"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/address_edit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="7"
                    android:background="@drawable/edit_text_background"
                    android:inputType="textPostalAddress"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="#000064"
                    android:textSize="12sp"
                    android:autofillHints="postalAddress"
                    android:hint="@string/address_hint_staff" />

            </LinearLayout>

            <!-- Subject -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/subject_label_staff"
                    android:textColor="@color/navy_blue"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/subject_edit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="7"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="#000064"
                    android:textSize="12sp"
                    android:inputType="text"
                    android:autofillHints="organizationTitle"
                    android:hint="@string/subject_hint_staff" />

            </LinearLayout>

            <!-- CNIC -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/cnic_label_staff"
                    android:textColor="@color/navy_blue"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/cnic_edit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="7"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="#000064"
                    android:textSize="12sp"
                    android:inputType="text"
                    android:autofillHints="username"
                    android:hint="@string/cnic_hint_staff" />

            </LinearLayout>

            <!-- Date of Birth -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/dob_label_staff"
                    android:textColor="@color/navy_blue"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/dob_edit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="7"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="false"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="#000064"
                    android:textSize="12sp"
                    android:inputType="date"
                    android:autofillHints="birthDate"
                    android:hint="@string/dob_hint_staff" />

            </LinearLayout>

            <!-- Qualification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/education_label_staff"
                    android:textColor="@color/navy_blue"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/qualification_edit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="7"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="#000064"
                    android:textSize="12sp"
                    android:inputType="text"
                    android:autofillHints="organizationTitle"
                    android:hint="@string/education_hint_staff" />

            </LinearLayout>

            <!-- Parent Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/parent_label_staff"
                    android:textColor="@color/navy_blue"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/parent_name_edit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="7"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="#000064"
                    android:textSize="12sp"
                    android:inputType="textPersonName"
                    android:autofillHints="name"
                    android:hint="@string/parent_hint_staff" />

            </LinearLayout>

            <!-- Gender -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/gender_label_staff"
                    android:textColor="@color/navy_blue"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/gender_edit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="7"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="#000064"
                    android:textSize="12sp"
                    android:hint="@string/gender_hint_staff" />

            </LinearLayout>

            <!-- State -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/state_label_staff"
                    android:textColor="@color/navy_blue"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/state_edit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="7"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="#000064"
                    android:textSize="12sp"
                    android:hint="@string/state_hint_staff" />

            </LinearLayout>

            <!-- City -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="start"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/city_label_staff"
                    android:textColor="@color/navy_blue"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/city_edit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="7"
                    android:background="@drawable/edit_text_background"
                    android:clickable="true"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="#000064"
                    android:textSize="12sp"
                    android:hint="@string/city_hint_staff" />

            </LinearLayout>



            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
           android:id="@+id/btn_save_changes"
           android:layout_width="0dp"
           android:layout_height="56dp"
           android:layout_marginStart="16dp"
           android:layout_marginEnd="16dp"
           android:layout_marginBottom="16dp"
           android:text="@string/update_profile"
           android:textColor="@color/white"
           android:textSize="14sp"
           android:fontFamily="@font/quicksand_bold"
           android:gravity="center"
           app:cornerRadius="8dp"
           app:backgroundTint="@color/navy_blue"
           app:rippleColor="@color/white"
           app:layout_constraintTop_toBottomOf="@+id/profile_details_card"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
