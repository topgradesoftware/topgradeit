<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Background wave -->
    <ImageView
        android:id="@+id/header_wave"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave_dark_brown"
        android:contentDescription="@string/header_wave_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ic_arrow_back -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back_icon_desc"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Header Title -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_student_profile"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/quicksand_bold"
        android:lineSpacingExtra="2dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="@+id/header_wave"
        app:layout_constraintEnd_toEndOf="@+id/header_wave" />

    <!-- ScrollView for content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/header_wave"
        app:layout_constraintBottom_toTopOf="@+id/btn_student_profile_update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <!-- Profile Image Section -->
            <RelativeLayout
                android:id="@+id/image_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:id="@+id/image_action_student_edit"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle_iv_student_profile_edit"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/man_brown"
                        android:contentDescription="@string/profile_picture" />

                    <ImageView
                        android:id="@+id/iv_edit_image_student"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignTop="@id/circle_iv_student_profile_edit"
                        android:layout_alignParentEnd="true"
                        android:background="@color/parent_primary"
                        android:padding="@dimen/_3sdp"
                        android:elevation="4dp"
                        android:contentDescription="@string/edit_image_icon"
                        app:srcCompat="@drawable/ic_edit_black_24dp"
                        app:tint="@color/white" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_upload_student_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/image_action_student_edit"
                    android:text="@string/click_here_to_upload_image"
                    android:textColor="?android:textColorPrimary"
                    android:visibility="gone"
                    android:fontFamily="@font/quicksand_bold" />
            </RelativeLayout>

            <!-- Profile Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Personal Information Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/personal_information"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_bold"
                        android:gravity="start" />

                    <!-- Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="5"
                            android:fontFamily="@font/quicksand_bold"
                            android:gravity="start"
                            android:padding="4dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:text="@string/name"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <EditText
                            android:id="@+id/et_student_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="5"
                            android:minHeight="48dp"
                            android:background="@drawable/edit_text_background"
                            android:hint="@string/enter_student_name"
                            android:autofillHints="name"
                            android:textColor="@color/black"
                            android:textColorHint="#000064"
                            android:textSize="12sp"
                            android:padding="12dp"
                            android:inputType="textCapWords" />

                    </LinearLayout>

                    <!-- Date of Birth -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="5"
                            android:fontFamily="@font/quicksand_bold"
                            android:gravity="start"
                            android:padding="4dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:text="@string/date_of_birth"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/linear_dob_student_edit"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_dob_student_edit"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/edit_text_background"
                                android:gravity="center_vertical"
                                android:padding="12dp"
                                android:textColor="@color/black"
                                android:textColorHint="#000064"
                                android:textSize="12sp"
                                android:drawablePadding="@dimen/_10sdp"
                                app:drawableEndCompat="@drawable/ic_chevron_right_black_24dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Gender -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="5"
                            android:fontFamily="@font/quicksand_bold"
                            android:gravity="start"
                            android:padding="4dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:text="@string/gender"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <RadioGroup
                            android:id="@+id/gender_radio_group"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="5"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radio_male"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/male"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:checked="true" />

                            <RadioButton
                                android:id="@+id/radio_female"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/female"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:checked="false" />
                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Update Profile Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_student_profile_update"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="@string/update_profile"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        app:cornerRadius="8dp"
        app:backgroundTint="@color/parent_primary"
        app:rippleColor="@color/white"
        app:icon="@drawable/baseline_update_24"
        app:iconTint="@color/white"
        app:iconGravity="start"
        app:iconPadding="8dp"
        app:iconSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar_update_student_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
