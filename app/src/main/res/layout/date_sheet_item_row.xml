<?xml version="1.0" encoding="utf-8"?>
<!-- Unified Date Sheet Item Row Layout -->
<!-- Single file for all data rows with optimized performance -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_date_sheet_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:padding="0dp"
    android:layout_margin="0dp">

    <!-- Break Time Row (hidden for Date Sheet) -->
    <LinearLayout
        android:id="@+id/linear_break_date_sheet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        android:divider="@drawable/style_divider_white"
        android:showDividers="middle"
        android:weightSum="6"
        android:visibility="gone">
        
        <TextView
            android:id="@+id/tv_serial_numb_date_sheet_break"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="#"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sm"
            android:fontFamily="@font/quicksand_bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_sm"
            android:gravity="center"
            android:padding="@dimen/_5sdp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/break_time"
            android:textColor="@color/white"
            android:textSize="@dimen/text_md"
            android:gravity="center"
            android:padding="@dimen/_5sdp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_sm"
            android:gravity="center"
            android:padding="@dimen/_5sdp"/>
    </LinearLayout>

    <!-- Main Data Row -->
    <LinearLayout
        android:id="@+id/header_rv_date_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:divider="@drawable/style_divider_gray"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:weightSum="6"
        android:background="?attr/colorSurface"
        android:padding="0dp">

        <!-- Serial Number -->
        <TextView
            android:id="@+id/tv_serial_no_date_sheet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/serial_number"
            android:textSize="@dimen/text_sm"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/quicksand_regular"
            android:maxLines="1" />

        <!-- Date -->
        <TextView
            android:id="@+id/tv_date_date_sheet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/date"
            android:textSize="@dimen/text_sm"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/quicksand_regular"
            android:maxLines="1" />

        <!-- Subject -->
        <TextView
            android:id="@+id/tv_subject_name_date_sheet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/subject"
            android:textSize="@dimen/text_sm"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/quicksand_regular"
            android:maxLines="1" />

        <!-- Time/Syllabus -->
        <TextView
            android:id="@+id/tv_time_or_syllabus_date_sheet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.0"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/time"
            android:textSize="@dimen/text_sm"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/quicksand_regular"
            android:maxLines="1" />

    </LinearLayout>

</LinearLayout>
