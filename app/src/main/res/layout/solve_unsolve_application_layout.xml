<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Serial Number and Date -->
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navy_blue"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Serial Number Badge -->
            <TextView
                android:id="@+id/serial_number"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/navy_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:backgroundTint="@color/white" />

            <!-- Task Title -->
            <TextView
                android:id="@+id/head"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:text="Task Title"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Status Badge (same style as leave applications) -->
            <TextView
                android:id="@+id/status_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:background="@drawable/rounded_black"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <!-- Content Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Date Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/date"
                    android:layout_marginEnd="6dp"
                    app:tint="@color/navy_blue"
                    android:contentDescription="Date icon" />

                <TextView
                    android:id="@+id/date_header_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30-08-2025 10:30 AM"
                    android:textColor="@color/navy_blue"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold" />

            </LinearLayout>

            <!-- Task Body/Description -->
            <TextView
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task description goes here"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/quicksand_medium"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginBottom="12dp" />

            <!-- Response Section (if exists) -->
            <LinearLayout
                android:id="@+id/Response_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_black"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/your_response"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Response:"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/response_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    android:fontFamily="@font/quicksand_medium"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Action Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap to view/respond"
                    android:textColor="@color/navy_blue"
                    android:textSize="12sp"
                    android:fontFamily="@font/quicksand_medium"
                    android:alpha="0.7" />

                <ImageView
                    android:id="@+id/context_menu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/navy_blue"
                    android:contentDescription="Arrow forward" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Hidden fields for data storage -->
    <TextView
        android:id="@+id/is_completed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/taskid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- Old buttons - hidden -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone">
        <Button
            android:id="@+id/incomplete"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <Button
            android:id="@+id/completed"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
