<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false">

    <!-- Background wave with elevation -->
    <ImageView
        android:id="@+id/header_wave"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave_navy_blue"
        android:contentDescription="@string/header_wave_background"
        android:elevation="4dp"
        android:translationZ="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@drawable/circle_background"
        app:tint="@color/white"
        android:elevation="6dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="parent" 
        android:contentDescription="@string/back_button"/>

    <!-- Header Title -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leave_applications"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/quicksand_bold"
        android:lineSpacingExtra="2dp"
        android:textAlignment="center"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="@+id/header_wave"
        app:layout_constraintEnd_toEndOf="@+id/header_wave" />

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@drawable/gradient_navy_blue_card_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/header_wave"
        app:layout_constraintBottom_toTopOf="@+id/footer_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Description Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_category_to_view_applications"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/navy_blue"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_marginBottom="24dp"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:ellipsize="none" />

                <!-- Submit New Application Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit_application"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/submit_new_application"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:minHeight="70dp"
                    app:icon="@drawable/ic_add_white_24dp"
                    app:iconTint="@color/white"
                    app:iconGravity="textStart"
                    app:iconPadding="4dp"
                    app:iconSize="28dp"
                    android:background="@drawable/gradient_navy_blue_submit"
                    app:cornerRadius="12dp"
                    android:elevation="4dp"
                    android:layout_marginBottom="24dp" />

                <!-- View All Applications Button with Counter -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_all_applications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all_applications"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_bold"
                        android:gravity="start|center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="60dp"
                        android:minHeight="70dp"
                        app:icon="@drawable/ic_assign_task"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="4dp"
                        app:iconSize="28dp"
                        android:background="@drawable/gradient_navy_blue_all"
                        app:cornerRadius="12dp"
                        android:elevation="4dp" />

                    <TextView
                        android:id="@+id/badge_all_applications"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textColor="@color/navy_blue"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_bold"
                        android:elevation="6dp" />

                </FrameLayout>

                <!-- Approved Applications Button with Counter -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_approved_applications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/approved_applications"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_bold"
                        android:gravity="start|center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="60dp"
                        android:minHeight="70dp"
                        app:icon="@drawable/ic_done"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="4dp"
                        app:iconSize="28dp"
                        android:background="@drawable/gradient_navy_blue_solved"
                        app:cornerRadius="12dp"
                        android:elevation="4dp" />

                    <TextView
                        android:id="@+id/badge_approved_applications"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textColor="@color/navy_blue"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_bold"
                        android:elevation="6dp" />

                </FrameLayout>

                <!-- Pending Applications Button with Counter -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pending_applications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pending_applications"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_bold"
                        android:gravity="start|center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="60dp"
                        android:minHeight="70dp"
                        app:icon="@drawable/ic_pending"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="4dp"
                        app:iconSize="28dp"
                        android:background="@drawable/gradient_navy_blue_discussion"
                        app:cornerRadius="12dp"
                        android:elevation="4dp" />

                    <TextView
                        android:id="@+id/badge_pending_applications"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textColor="@color/navy_blue"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_bold"
                        android:elevation="6dp" />

                </FrameLayout>

                <!-- Rejected Applications Button with Counter -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_rejected_applications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rejected_applications"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_bold"
                        android:gravity="start|center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="60dp"
                        android:minHeight="70dp"
                        app:icon="@drawable/ic_in_progress"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="4dp"
                        app:iconSize="28dp"
                        android:background="@drawable/gradient_navy_blue_pending"
                        app:cornerRadius="12dp"
                        android:elevation="4dp" />

                    <TextView
                        android:id="@+id/badge_rejected_applications"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textColor="@color/navy_blue"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_bold"
                        android:elevation="6dp" />

                </FrameLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <!-- Footer Container -->
    <LinearLayout
        android:id="@+id/footer_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Footer Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/navy_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:padding="16dp"
                android:paddingBottom="24dp"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/topgrade_logo"
                    android:contentDescription="@string/topgrade_logo"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="@string/powered_by_topgrade_software"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

