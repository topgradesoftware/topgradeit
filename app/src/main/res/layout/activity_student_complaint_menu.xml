<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false">

    <!-- Background wave with elevation -->
    <ImageView
        android:id="@+id/header_wave"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave_teal"
        android:contentDescription="@string/header_wave_background"
        android:elevation="4dp"
        android:translationZ="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@drawable/circle_background"
        app:tint="@color/white"
        android:elevation="6dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="parent" 
        android:contentDescription="@string/back_button"/>

    <!-- Header Title -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/complaints"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/quicksand_bold"
        android:lineSpacingExtra="2dp"
        android:textAlignment="center"
        android:elevation="8dp"
        android:translationZ="4dp"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="@+id/header_wave"
        app:layout_constraintEnd_toEndOf="@+id/header_wave"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Content Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/content_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@+id/header_wave"
        app:layout_constraintBottom_toTopOf="@+id/footer_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- Description Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_category_to_view_complaints"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:layout_marginBottom="32dp" />

                <!-- Submit Complaint Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit_complaint"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="@string/submit_complaint"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="start|center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    app:icon="@drawable/ic_add_white_24dp"
                    app:iconTint="@color/white"
                    app:iconGravity="textStart"
                    app:iconPadding="16dp"
                    app:iconSize="28dp"
                    app:backgroundTint="@color/teal"
                    app:cornerRadius="12dp"
                    android:elevation="4dp"
                    android:layout_marginBottom="24dp" />

                <!-- All Complaints Button with Counter -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_all_complaints"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="@string/all_complaints"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_bold"
                        android:gravity="start|center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="60dp"
                        app:icon="@drawable/ic_assign_task"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconSize="28dp"
                        app:backgroundTint="@color/teal"
                        app:cornerRadius="12dp"
                        android:elevation="4dp" />

                    <TextView
                        android:id="@+id/badge_all_complaints"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textColor="@color/teal"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_bold"
                        android:elevation="6dp" />

                </FrameLayout>

                <!-- Solved Complaints Button with Counter -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_solved_complaints"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="@string/solved_complaints"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_bold"
                        android:gravity="start|center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="60dp"
                        app:icon="@drawable/ic_done"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconSize="28dp"
                        app:backgroundTint="@color/success_500"
                        app:cornerRadius="12dp"
                        android:elevation="4dp" />

                    <TextView
                        android:id="@+id/badge_solved_complaints"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textColor="@color/success_500"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_bold"
                        android:elevation="6dp" />

                </FrameLayout>

                <!-- Under Discussion Complaints Button with Counter -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_under_discussion_complaints"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="@string/under_discussion_complaints"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_bold"
                        android:gravity="start|center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="60dp"
                        app:icon="@drawable/ic_in_progress"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconSize="28dp"
                        app:backgroundTint="@color/error_500"
                        app:cornerRadius="12dp"
                        android:elevation="4dp" />

                    <TextView
                        android:id="@+id/badge_under_discussion_complaints"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textColor="@color/error_500"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_bold"
                        android:elevation="6dp" />

                </FrameLayout>

                <!-- Pending Complaints Button with Counter -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pending_complaints"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="@string/pending_complaints"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_bold"
                        android:gravity="start|center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="60dp"
                        app:icon="@drawable/ic_pending"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconSize="28dp"
                        app:backgroundTint="@color/warning_500"
                        app:cornerRadius="12dp"
                        android:elevation="4dp" />

                    <TextView
                        android:id="@+id/badge_pending_complaints"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/white"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textColor="@color/warning_500"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_bold"
                        android:elevation="6dp" />

                </FrameLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <!-- Footer Container -->
    <LinearLayout
        android:id="@+id/footer_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Footer Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/teal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:padding="16dp"
                android:paddingBottom="24dp"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/topgrade_logo"
                    android:contentDescription="@string/topgrade_logo"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="@string/powered_by_topgrade_software"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

