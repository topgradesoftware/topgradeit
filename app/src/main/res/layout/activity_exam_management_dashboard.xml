<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".Teacher.Exam.ExamManagementDashboard">

    <!-- HEADER BACKGROUND -->
    <ImageView
        android:id="@+id/header_wave"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave_navy_blue"
        android:contentDescription="@string/header_wave_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BACK BUTTON -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/white"
        android:contentDescription="@string/back_button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="@id/header_wave"
        app:layout_constraintBottom_toBottomOf="@id/header_wave"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- TITLE -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exam_management"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/header_wave"
        app:layout_constraintBottom_toBottomOf="@id/header_wave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- MAIN SCROLL CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/header_wave"
        app:layout_constraintBottom_toTopOf="@id/footer_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp">

            <!-- Progress Report Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/progress_report_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                            <!-- Section Header -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/your_progress"
                        android:textColor="@color/navy_blue"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_marginBottom="@dimen/_12sdp" />

                            <!-- See Your Progress Report Button -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/see_progress_report_button"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:text="@string/see_your_progress_report"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/quicksand_bold"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/colorPrimary"
                        app:icon="@drawable/ic_reports"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Exam Menu Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/exam_menu_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                            <!-- Section Header -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/exam_operations"
                        android:textColor="@color/navy_blue"
                        android:textSize="18sp"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_marginBottom="@dimen/_12sdp" />

                            <!-- Submit Exam Button -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/submit_exam_button"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:text="@string/submit_exam_marks"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/quicksand_bold"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/navy_blue"
                        app:icon="@drawable/ic_exam"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />

                            <!-- Update Exam Button -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/update_exam_button"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:text="@string/update_exam_marks"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/quicksand_bold"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/colorAccent"
                        app:icon="@drawable/ic_edit_black_24dp"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />

                            <!-- View Results Button -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/view_results_button"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:text="@string/view_results"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/quicksand_bold"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/colorPrimary"
                        app:icon="@drawable/ic_reports"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Exam Selection Section (Initially Hidden) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/exam_selection_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <!-- Exam Selection Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_exam"
                        android:textColor="@color/navy_blue"
                        android:textSize="16sp"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_marginBottom="@dimen/_8sdp" />

                    <!-- Exam Dropdown -->
                    <LinearLayout
                        android:id="@+id/exam_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_black"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_12sdp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_exam"
                            android:contentDescription="@string/exam_icon"
                            app:tint="@color/white"
                            android:layout_marginEnd="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/show_advanced_filter"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/select_exam"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/quicksand_medium"
                            android:gravity="center_vertical" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_drop_down_black_24dp"
                            android:contentDescription="@string/dropdown_arrow"
                            app:tint="@color/white" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Student Marks Section (Initially Hidden) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/student_marks_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <!-- Student Marks Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/student_marks"
                        android:textColor="@color/navy_blue"
                        android:textSize="16sp"
                        android:fontFamily="@font/quicksand_bold"
                        android:layout_marginBottom="@dimen/_12sdp" />

                    <!-- Date Selection -->
                    <TextView
                        android:id="@+id/attendence_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_colon"
                        android:textColor="@color/color_black"
                        android:textSize="14sp"
                        android:fontFamily="@font/quicksand_medium"
                        android:layout_marginBottom="@dimen/_8sdp" />

                    <!-- SMS Checkbox -->
                    <CheckBox
                        android:id="@+id/sms_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send_sms"
                        android:textColor="@color/color_black"
                        android:textSize="14sp"
                        android:fontFamily="@font/quicksand_medium"
                        android:layout_marginBottom="@dimen/_12sdp" />

                    <!-- Table Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/navy_blue"
                        android:orientation="horizontal"
                        android:padding="@dimen/_8sdp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/student"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/quicksand_bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/roll_no"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/quicksand_bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/marks"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/quicksand_bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/quicksand_bold"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Student List RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/exam_rcv"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/style_border_gray"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"/>

                    <!-- Summary Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@color/navy_blue"
                        android:padding="@dimen/_8sdp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="@string/total_records_colon"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/quicksand_bold"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/total_records"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/zero_value"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/quicksand_bold"
                            android:gravity="center" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BOTTOM ACTION BAR -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="6dp"
        android:padding="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@id/footer_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Submit_Marks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_4sdp"
            android:text="@string/submit_marks"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/quicksand_bold"
            android:visibility="gone"
            app:cornerRadius="10dp"
            app:backgroundTint="@color/navy_blue"
            app:icon="@drawable/baseline_arrow_upward_24"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_to_menu_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_4sdp"
            android:text="@string/back_to_menu"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/quicksand_bold"
            android:visibility="gone"
            app:cornerRadius="10dp"
            app:backgroundTint="@color/colorAccent"
            app:icon="@drawable/ic_arrow_back"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

    </LinearLayout>

    <!-- FOOTER -->
    <LinearLayout
        android:id="@+id/footer_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/footer_background_staff_navy"
        android:elevation="8dp"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Footer Content -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/topgrade_logo"
                android:contentDescription="@string/topgrade_logo"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/powered_by_topgrade_software"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- CENTER PROGRESS BAR -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
