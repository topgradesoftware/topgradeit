<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp">

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminateOnly="true"
        android:visibility="gone" />

    <!-- Empty State View -->
    <LinearLayout
        android:id="@+id/empty_state_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/_32sdp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:src="@drawable/ic_complaints"
            app:tint="@color/gray_light" />

        <TextView
            android:id="@+id/empty_state_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="@string/no_complaints_found"
            android:textColor="@color/text_secondary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand_bold" />

        <TextView
            android:id="@+id/empty_state_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_complaints_message"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textAlignment="center"
            android:fontFamily="@font/quicksand_medium" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_complaint_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/create_new_complaint"
            android:textColor="@color/white"
            app:backgroundTint="@color/navy_blue"
            app:cornerRadius="@dimen/_8sdp"
            app:icon="@drawable/ic_add"
            app:iconGravity="textStart"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Complaints RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/complaints_rcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"
        tools:listitem="@layout/solve_unsolve_application_layout"
        tools:itemCount="3" />

</LinearLayout>
