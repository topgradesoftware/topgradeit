<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false"
    tools:targetApi="34">

    <!-- ================= HEADER SECTION ================= -->

    <ImageView
        android:id="@+id/header_wave"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave_navy_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/white"
        android:contentDescription="@string/back_button"
        app:layout_constraintTop_toTopOf="@id/header_wave"
        app:layout_constraintBottom_toBottomOf="@id/header_wave"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_section_attendance"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/header_wave"
        app:layout_constraintBottom_toBottomOf="@id/header_wave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/header_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        android:alpha="0.15"
        app:layout_constraintTop_toBottomOf="@id/header_wave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ================= MAIN CONTENT ================= -->

    <LinearLayout
        android:id="@+id/date_sms_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/header_separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/attendance_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:background="@drawable/rounded_black"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/attendence_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:text="@string/attendance_date_placeholder"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/quicksand_medium" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/black" />

        </LinearLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/sms_header_checkbox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:layout_marginStart="@dimen/_4sdp"
            android:background="@drawable/rounded_black"
            android:gravity="center"
            android:text="@string/send_sms"
            android:textColor="@color/navy_blue"
            android:textSize="13sp"
            android:fontFamily="@font/quicksand_medium"
            app:buttonTint="@color/navy_blue"
            app:useMaterialThemeColors="false" />

    </LinearLayout>

    <Spinner
        android:id="@+id/classs_spinner"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/rounded_black"
        android:paddingHorizontal="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/date_sms_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/section_spinner"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/rounded_black"
        android:paddingHorizontal="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/classs_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/header_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@color/navy_blue"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_4sdp"
        android:gravity="center_vertical"
        android:weightSum="11.3"
        app:layout_constraintTop_toBottomOf="@id/section_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1.2" android:text="@string/sms" android:textColor="@color/white"
            android:gravity="center" android:textSize="12sp" android:fontFamily="@font/quicksand_medium" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1.8" android:text="@string/roll_number" android:textColor="@color/white"
            android:gravity="center" android:textSize="12sp" android:fontFamily="@font/quicksand_medium" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="2.3" android:text="@string/name" android:textColor="@color/white"
            android:gravity="center" android:textSize="12sp" android:fontFamily="@font/quicksand_medium" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="2.5" android:text="@string/action" android:textColor="@color/white"
            android:gravity="center" android:textSize="12sp" android:fontFamily="@font/quicksand_medium" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="3" android:text="@string/reason" android:textColor="@color/white"
            android:gravity="center" android:textSize="12sp" android:fontFamily="@font/quicksand_medium" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/attendence_rcv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/header_rv"
        app:layout_constraintBottom_toTopOf="@id/total_records"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/total_records"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@drawable/rounded_black"
        android:gravity="center"
        android:text="@string/total_records"
        android:textAppearance="@style/TextAppearance.QuicksandBold.Small"
        app:layout_constraintBottom_toTopOf="@id/submit_attendence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_attendence"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_48sdp"
        android:text="@string/submit_attendance"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/quicksand_bold"
        android:backgroundTint="@color/navy_blue"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/navy_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
