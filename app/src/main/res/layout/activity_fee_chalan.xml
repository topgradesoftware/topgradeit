<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="0dp"
    android:fitsSystemWindows="false">

    <!-- Header Wave Background -->
    <ImageView
        android:id="@+id/header_wave"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave_dark_brown"
        android:contentDescription="@string/header_wave_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ic_arrow_back -->
        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back_button"/>

        <!-- Student Selection -->
        <components.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/select_child_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/spinner_background"
            android:gravity="start"
            android:contentDescription="@string/select_student" />

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Horizontal Scroll Container for wide tables (landscape support) -->
    <HorizontalScrollView
        android:id="@+id/table_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="horizontal"
        android:fillViewport="false"
        android:contentDescription="@string/fee_challan_table"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <!-- Header Row -->
            <LinearLayout
                android:id="@+id/header_row"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@color/parent_primary"
                android:divider="@drawable/style_divider_gray"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:showDividers="middle">

                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/chalan_number_column"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="7dp"
                    android:singleLine="true"
                    android:text="@string/chalan_number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/month_column"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="7dp"
                    android:singleLine="true"
                    android:text="@string/month"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/date_column"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="7dp"
                    android:singleLine="true"
                    android:text="@string/date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/fee_column"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="7dp"
                    android:singleLine="true"
                    android:text="@string/fee"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/arrears_column"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="7dp"
                    android:singleLine="true"
                    android:text="@string/arrears"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/fine_column"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="7dp"
                    android:singleLine="true"
                    android:text="@string/fine"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/discount_column"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="7dp"
                    android:singleLine="true"
                    android:text="@string/discount"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/payable_column"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="7dp"
                    android:singleLine="true"
                    android:text="@string/payable"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/payment_column"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="7dp"
                    android:singleLine="true"
                    android:text="@string/payment"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/remaining_column"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="7dp"
                    android:singleLine="true"
                    android:text="@string/remaining"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <!-- RecyclerView for Data Rows -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/attendance_rcv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:contentDescription="@string/fee_challan_data_table"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/chalan_item" />

        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
