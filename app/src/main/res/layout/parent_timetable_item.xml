<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_parent_timetable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Break Time Row (shown when it's a break) -->
    <LinearLayout
        android:id="@+id/linear_break_parent_timetable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/parent_primary"
        android:divider="@drawable/style_divider_gray"
        android:showDividers="middle"
        android:weightSum="6.1"
        android:visibility="gone">
        
        <TextView
            android:id="@+id/tv_serial_numb_parent_timetable_break"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center"
            android:padding="8dp"
            android:text="#"
            android:textColor="@color/white"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text=""
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:padding="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text=""
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:padding="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="@string/break_time"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:text=""
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Data Row (shown when it's actual timetable data) -->
    <LinearLayout
        android:id="@+id/header_rv_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/style_divider_gray"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:weightSum="6">

        <TextView
            android:id="@+id/tv_serial_no_parent_timetable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center"
            android:padding="8dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/timing_container_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <TextView
                android:id="@+id/start_time_parent_timetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textSize="10sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/end_time_parent_timetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textSize="10sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_lecture_number_parent_timetable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:padding="8dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_subject_name_parent_timetable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:padding="8dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/black" />
            
        <TextView
            android:id="@+id/tv_teacher_name_parent_timetable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:gravity="center"
            android:padding="8dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/black" />

    </LinearLayout>

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_dark" />
</LinearLayout>
