<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:targetApi="34"
    tools:ignore="MissingConstraints,LayoutFidelity">

    <!-- HEADER WAVE -->
    <ImageView
        android:id="@+id/header_wave"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave_navy_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BACK BUTTON -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/white"
        android:contentDescription="@string/back_button"
        app:layout_constraintTop_toTopOf="@id/header_wave"
        app:layout_constraintBottom_toBottomOf="@id/header_wave"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- HEADER TITLE -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/submit_class_attendance"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/header_wave"
        app:layout_constraintBottom_toBottomOf="@id/header_wave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- HEADER SHADOW SEPARATOR -->
    <View
        android:id="@+id/header_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:alpha="0.1"
        app:layout_constraintTop_toBottomOf="@id/header_wave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- DATE + SMS CONTAINER -->
    <LinearLayout
        android:id="@+id/date_sms_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/header_separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- DATE SELECTION -->
        <LinearLayout
            android:id="@+id/attendance_date"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_black"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/attendence_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="@string/attendance_date_placeholder"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/quicksand_medium" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/black" />

        </LinearLayout>

        <!-- SMS TOGGLE -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/sms_header_checkbox"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.6"
            android:layout_marginStart="6dp"
            android:background="@drawable/rounded_black"
            android:gravity="center"
            android:text="@string/send_sms"
            android:textColor="@color/navy_blue"
            android:textSize="13sp"
            app:buttonTint="@color/navy_blue"
            app:useMaterialThemeColors="false" />
    </LinearLayout>

    <!-- CLASS SPINNER -->
    <LinearLayout
        android:id="@+id/class_selection_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:background="@drawable/rounded_black"
        android:paddingHorizontal="6dp"
        app:layout_constraintTop_toBottomOf="@id/date_sms_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Spinner
            android:id="@+id/classs_spinner"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
    </LinearLayout>

    <!-- TABLE HEADER -->
    <LinearLayout
        android:id="@+id/header_rv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@color/navy_blue"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/class_selection_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sms"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/roll_number"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/name"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/action"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/reason"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- RECYCLERVIEW -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/attendence_rcv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/header_rv"
        app:layout_constraintBottom_toTopOf="@id/total_records_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TOTAL RECORDS -->
    <LinearLayout
        android:id="@+id/total_records_container"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/_6sdp"
        android:background="@drawable/rounded_black"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/submit_attendence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/total_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_records"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- SUBMIT BUTTON -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_attendence"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_48sdp"
        android:text="@string/submit_attendance"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/quicksand_bold"
        android:backgroundTint="@color/navy_blue"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LOADER -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/navy_blue"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
