<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false"
    tools:context=".ui.SubmitResponseActivity">

    <!-- Header Background Wave -->
    <ImageView
        android:id="@+id/header_wave"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave_navy_blue"
        android:contentDescription="@string/header_wave_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/white"
        android:contentDescription="@string/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/header_wave"
        app:layout_constraintBottom_toBottomOf="@id/header_wave" />

    <!-- Header Title -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_response"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/quicksand_bold"
        android:lineSpacingExtra="2dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/header_wave"
        app:layout_constraintBottom_toBottomOf="@id/header_wave"
        app:layout_constraintStart_toStartOf="@id/header_wave"
        app:layout_constraintEnd_toEndOf="@id/header_wave" />

    <!-- Card Content -->
    <androidx.cardview.widget.CardView
        android:id="@+id/content_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="80dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/header_wave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Response Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/write_your_response"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginBottom="4dp" />

            <!-- Response Input -->
            <EditText
                android:id="@+id/response_body"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="@string/type_here"
                android:background="@drawable/rounded_black"
                android:padding="12dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:layout_marginBottom="16dp" />

            <!-- Task Completed Switch -->
            <LinearLayout
                android:id="@+id/response_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_black"
                android:padding="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/completed_switch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/task_completed"
                    android:textSize="14sp"
                    android:drawableStart="@drawable/task_icon"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_response"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/submit_response"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/quicksand_bold"
                app:icon="@drawable/baseline_send_24"
                app:iconTint="@color/white"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                app:iconSize="24dp"
                app:backgroundTint="@color/navy_blue"
                app:cornerRadius="8dp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
