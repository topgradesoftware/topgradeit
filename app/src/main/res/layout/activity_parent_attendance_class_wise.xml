<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Background wave -->
    <ImageView
        android:id="@+id/header_wave"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave_dark_brown"
        android:contentDescription="@string/header_wave_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ic_arrow_back -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="parent" 
        android:contentDescription="@string/back_button"/>

    <!-- Header Title -->
    <TextView
        android:id="@+id/tv_teacher_title_name_attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/quicksand_bold"
        android:lineSpacingExtra="2dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="@+id/header_wave"
        app:layout_constraintEnd_toEndOf="@+id/header_wave" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Filter Card (Fixed) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/filter_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Student Selection -->
                <components.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/select_child_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/spinner_background"
                    android:padding="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:singleLine="false"
                    android:ellipsize="none"
                    android:maxLines="1" />

                <!-- Month Selection -->
                <components.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/select_month_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/spinner_background"
                    android:padding="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:singleLine="false"
                    android:ellipsize="none"
                    android:maxLines="1" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Attendance Table Header -->
        <include 
            android:id="@+id/attendance_table_header"
            layout="@layout/parent_attendance_table_header" />

        <!-- Attendance List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attendence_rcv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:background="@color/white" 
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"/>

        <!-- Summary Table at Bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded_card_background"
            android:padding="8dp"
            android:elevation="4dp">

            <!-- Summary Table Header -->
            <TextView
                android:id="@+id/summary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attendance_summary"
                android:textSize="14sp"
                android:textColor="@color/dark_brown"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal" />

            <!-- Summary Cards Row 1: Present, Absent, Half Leave -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="6dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:background="@drawable/rounded_card_background"
                    android:padding="4dp"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/present"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/quicksand_bold"
                        android:textStyle="bold"
                        android:layout_marginEnd="2dp" />

                    <TextView
                        android:id="@+id/Total_Present"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:textSize="11sp"
                        android:textColor="@color/dark_brown"
                        android:fontFamily="@font/quicksand_bold"
                        android:textStyle="bold"
                        android:layout_gravity="end" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:background="@drawable/rounded_card_background"
                    android:padding="4dp"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/absent"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/quicksand_bold"
                        android:textStyle="bold"
                        android:layout_marginEnd="2dp" />

                    <TextView
                        android:id="@+id/Total_Absent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:textSize="11sp"
                        android:textColor="@color/dark_brown"
                        android:fontFamily="@font/quicksand_bold"
                        android:textStyle="bold"
                        android:layout_gravity="end" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:background="@drawable/rounded_card_background"
                    android:padding="4dp"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/half_leave"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/quicksand_bold"
                        android:textStyle="bold"
                        android:layout_marginEnd="2dp" />

                    <TextView
                        android:id="@+id/Total_Half_Leave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:textSize="11sp"
                        android:textColor="@color/dark_brown"
                        android:fontFamily="@font/quicksand_bold"
                        android:textStyle="bold"
                        android:layout_gravity="end" />

                </LinearLayout>

            </LinearLayout>

            <!-- Summary Cards Row 2: Full Leave, Late, Working Days -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:background="@drawable/rounded_card_background"
                    android:padding="4dp"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/full_leave"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/quicksand_bold"
                        android:textStyle="bold"
                        android:layout_marginEnd="2dp" />

                    <TextView
                        android:id="@+id/Total_Full_Leave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:textSize="11sp"
                        android:textColor="@color/dark_brown"
                        android:fontFamily="@font/quicksand_bold"
                        android:textStyle="bold"
                        android:layout_gravity="end" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:background="@drawable/rounded_card_background"
                    android:padding="4dp"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/late"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/quicksand_bold"
                        android:textStyle="bold"
                        android:layout_marginEnd="2dp" />

                    <TextView
                        android:id="@+id/Total_Late"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:textSize="11sp"
                        android:textColor="@color/dark_brown"
                        android:fontFamily="@font/quicksand_bold"
                        android:textStyle="bold"
                        android:layout_gravity="end" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:background="@drawable/rounded_card_background"
                    android:padding="4dp"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/working_days"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/quicksand_bold"
                        android:textStyle="bold"
                        android:layout_marginEnd="2dp" />

                    <TextView
                        android:id="@+id/working_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:textSize="11sp"
                        android:textColor="@color/dark_brown"
                        android:fontFamily="@font/quicksand_bold"
                        android:textStyle="bold"
                        android:layout_gravity="end" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
