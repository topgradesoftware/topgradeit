<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title Row with Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <!-- Title -->
            <TextView
                android:id="@+id/complaint_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Complaint Title"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold" />

            <!-- Menu Icon -->
            <ImageView
                android:id="@+id/complaint_menu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="@string/options_menu"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@color/dark_brown" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/complaint_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complaint description goes here..."
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:fontFamily="@font/quicksand_medium"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />

        <!-- Status and Date Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Status -->
            <TextView
                android:id="@+id/complaint_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="@color/warning_500"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:background="@drawable/status_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginEnd="8dp" />

            <!-- Date -->
            <TextView
                android:id="@+id/complaint_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2024-01-01"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="end" />

        </LinearLayout>

        <!-- Response Section (Only visible when response exists) -->
        <LinearLayout
            android:id="@+id/response_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/light_gray"
            android:padding="12dp"
            android:visibility="gone">

            <!-- Response Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_response"
                    app:tint="@color/dark_brown"
                    android:contentDescription="@string/response_icon"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/admin_response"
                    android:textColor="@color/dark_brown"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold" />

                <TextView
                    android:id="@+id/response_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 Jan, 24"
                    android:textColor="@color/gray"
                    android:textSize="11sp"
                    android:fontFamily="@font/quicksand_medium" />

            </LinearLayout>

            <!-- Response Text -->
            <TextView
                android:id="@+id/response_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Response text will appear here..."
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/quicksand_medium"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

