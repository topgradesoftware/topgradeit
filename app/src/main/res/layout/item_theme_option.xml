<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/theme_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?colorCardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Theme Icon -->
        <ImageView
            android:id="@+id/theme_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_theme_system"
            android:background="@drawable/circle_background"
            android:padding="12dp"
            android:contentDescription="@string/theme_icon" />

        <!-- Theme Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/theme_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="System Default"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary" />

            <TextView
                android:id="@+id/theme_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Follow system theme"
                android:textSize="14sp"
                android:textColor="?android:textColorSecondary"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Selection Indicator -->
        <ImageView
            android:id="@+id/selected_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            android:contentDescription="@string/selected" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 
