<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:fitsSystemWindows="true"
    tools:context=".AddDiaryActivity">

    <!-- Background wave -->
    <ImageView
        android:id="@+id/header_wave"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave"
        android:contentDescription="@string/header_wave_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ic_arrow_back -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back_icon_desc"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Header Title -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Diary"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/quicksand_bold"
        android:lineSpacingExtra="2dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="@+id/header_wave"
        app:layout_constraintEnd_toEndOf="@+id/header_wave" />

    <!-- ScrollView for content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/header_wave"
        app:layout_constraintBottom_toTopOf="@+id/btnAddDiary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Class Selection Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Select Class -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tvSelectClassLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Class"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="14sp"
                        android:fontFamily="@font/quicksand_bold"
                        app:drawableStartCompat="@drawable/ic_class_24dp"
                        android:drawablePadding="8dp" />

                    <Spinner
                        android:id="@+id/spinnerClass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:entries="@array/class_options"
                        android:padding="12dp"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>

                <!-- Select Subject -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/tvSelectSubjectLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Subject"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="14sp"
                        android:fontFamily="@font/quicksand_bold"
                        app:drawableStartCompat="@drawable/ic_subject_24dp"
                        android:drawablePadding="8dp" />

                    <Spinner
                        android:id="@+id/spinnerSubject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:entries="@array/subject_options"
                        android:padding="12dp"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>

            </LinearLayout>

            <!-- Section and Student Selection Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Select Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tvSelectSectionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Section"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="14sp"
                        android:fontFamily="@font/quicksand_bold"
                        app:drawableStartCompat="@drawable/ic_section_24dp"
                        android:drawablePadding="8dp" />

                    <Spinner
                        android:id="@+id/spinnerSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:entries="@array/section_options"
                        android:padding="12dp"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>

                <!-- Select Student -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/tvSelectStudentLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Student"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="14sp"
                        android:fontFamily="@font/quicksand_bold"
                        app:drawableStartCompat="@drawable/ic_student_24dp"
                        android:drawablePadding="8dp" />

                    <Spinner
                        android:id="@+id/spinnerStudent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:entries="@array/student_options"
                        android:padding="12dp"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>

            </LinearLayout>

            <!-- Date Picker Section -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPickDate"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="29 October, 2025"
                android:textColor="?android:textColorPrimary"
                android:textSize="14sp"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="start|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:icon="@drawable/ic_calendar"
                app:iconTint="?android:textColorPrimary"
                app:iconPadding="12dp"
                app:iconGravity="start"
                app:cornerRadius="8dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp"
                app:backgroundTint="@android:color/white" />

            <!-- Class Diary Section -->
            <TextView
                android:id="@+id/tvClassDiaryHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#E0E0E0"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:text="Class Diary"
                android:textColor="?android:textColorPrimary"
                android:textSize="18sp"
                android:fontFamily="@font/quicksand_bold"
                android:textStyle="bold" />

            <!-- Description Section -->
            <TextView
                android:id="@+id/tvDescriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Description"
                android:textColor="?android:textColorPrimary"
                android:textSize="16sp"
                android:fontFamily="@font/quicksand_bold"
                app:drawableStartCompat="@drawable/ic_description_24dp"
                android:drawablePadding="8dp" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:gravity="top|start"
                android:hint="Write diary body"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textSize="14sp" />

            <!-- Upload Picture Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUploadPicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#2196F3"
                android:padding="12dp"
                android:text="Upload Picture"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="@font/quicksand_bold"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_upload_24dp"
                app:iconTint="@android:color/white"
                app:iconPadding="8dp" />

            <!-- Subject Diary Section -->
            <TextView
                android:id="@+id/tvSubjectDiaryHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#E0E0E0"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:text="Subject Diary"
                android:textColor="?android:textColorPrimary"
                android:textSize="18sp"
                android:fontFamily="@font/quicksand_bold"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <!-- Add Diary Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddDiary"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#2196F3"
        android:padding="16dp"
        android:text="Add Diary"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_add_white_24dp"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
