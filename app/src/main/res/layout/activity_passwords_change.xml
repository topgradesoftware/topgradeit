<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="0dp"
    android:fitsSystemWindows="false">

    <!-- Header Wave Background -->
    <ImageView
        android:id="@+id/header_wave"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave_dark_brown"
        android:contentDescription="@string/header_wave_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/back_button"/>

    <!-- Header Title -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_password"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/quicksand_bold"
        android:lineSpacingExtra="2dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/header_wave"
        app:layout_constraintBottom_toBottomOf="@+id/header_wave"
        app:layout_constraintStart_toStartOf="@+id/header_wave"
        app:layout_constraintEnd_toEndOf="@+id/header_wave" />

    <!-- Content Container -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/header_wave"
        app:layout_constraintBottom_toTopOf="@+id/chnages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Previous Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/Previous_Password"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/quicksand_bold" />

        <EditText
            android:id="@+id/Previous_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/white_border"
            android:hint="@string/Previous_Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="@dimen/_8sdp"
            android:textSize="@dimen/_12ssp" />

        <!-- New Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxLines="1"
            android:text="@string/New_Password"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/quicksand_bold" />

        <EditText
            android:id="@+id/New_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/white_border"
            android:hint="@string/New_Password"
            android:inputType="textPassword"
            android:padding="@dimen/_8sdp"
            android:textSize="@dimen/_12ssp" />

        <!-- Confirm Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxLines="1"
            android:text="Confirm Password"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/quicksand_bold" />

        <EditText
            android:id="@+id/Confirm_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/white_border"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="@dimen/_8sdp"
            android:textSize="@dimen/_12ssp" />

        <!-- Show/Hide Passwords Checkbox -->
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/show_hide_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Show Passwords" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:indeterminateOnly="true"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Change Password Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/chnages"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="Change Password"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        app:cornerRadius="8dp"
        app:backgroundTint="@color/colorAccent"
        app:rippleColor="@color/white"
        app:icon="@drawable/baseline_done_24"
        app:iconTint="@android:color/white"
        app:iconGravity="start"
        app:iconPadding="8dp"
        app:iconSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/content_container"
        app:layout_constraintBottom_toTopOf="@+id/footer_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Footer Container -->
    <LinearLayout
        android:id="@+id/footer_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/footer_background_brown"
        android:elevation="6dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/topgrade_logo"
            android:scaleType="fitCenter"
            android:src="@drawable/topgrade_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/powered_by_topgrade_software"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
