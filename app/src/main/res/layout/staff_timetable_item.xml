<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_staff_timetable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_break_staff_timetable"
        android:background="@color/navy_blue"
        android:divider="@drawable/style_divider_gray"
        android:showDividers="middle"
        android:weightSum="6"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_serial_numb_staff_timetable_break"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="@string/serial_number"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/break_time"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            android:gravity="center_horizontal"
            android:layout_weight="5.3"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_rv_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/style_divider_gray"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:weightSum="6">

        <TextView
            android:id="@+id/tv_serial_no_staff_timetable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="@string/serial_number"
            android:textSize="@dimen/_10ssp" />

        <LinearLayout
            android:id="@+id/timing_container_staff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_2sdp">

            <TextView
                android:id="@+id/start_time_staff_timetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/end_time_staff_timetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_lecture_number_staff_timetable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="@string/lecture_numb"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/tv_subject_name_staff_timetable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="@string/subject"
            android:textSize="@dimen/_10ssp" />
        <TextView
            android:id="@+id/tv_teacher_name_staff_timetable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="@string/section"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_dark" />
</LinearLayout>
